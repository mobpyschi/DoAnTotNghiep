<body class="home-2">
    <div class="background-blurry"></div>
    <div class="box-note">
        <div class="box-form">
            <div class="box-header">
                <h4><i class="fas fa-exclamation-triangle"></i>Chú ý</h4>
                <a class="btn-close"><i class="far fa-times-circle" style=" padding: 6px; float: right; font-size: 2rem;color:white;cursor:pointer"></i></a>

            </div>
            <div class="box-content">
                <p>Bạn phải đăng nhập để thanh toán hoặc đặt hàng.</p>
            </div>
            <div class="box-footer">
                <a class="btn-login" href="~/Customer/Login">Đăng nhập</a>
            </div>
        </div>
    </div>
    <div>
        
        <header>
            <!-- header-top-area-start -->
            <div class="header-top-area">
                <div class="container">
                    <div class="row">
                        @{Html.RenderAction("_PartialCustomerInformation", "Customer");}
                    </div>
                </div>
            </div>
            <!-- header-top-area-end -->
            <!-- header-mid-area-start -->
            <div class="header-mid-area ptb-40">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-5 col-xs-12">
                            <div class="header-search">
                                <form action="#">
                                    <input type="text" placeholder="Tìm kiếm" />
                                    <a href="#"><i class="fas fa-search"></i></a>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-4 col-xs-12">
                            <div class="logo-area text-center logo-xs-mrg">
                                <a href="~/Home/Index"><img style="height:50px; width:250px" src="~/img/logo/logo.png" alt="logo" /></a>
                            </div>
                        </div>
                        <div id="cart" class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            @Html.Partial("_PartialCart")
                        </div>
                    </div>
                </div>
            </div>
            <!-- header-mid-area-end -->
            <!-- main-menu-area-start -->
            <div class="main-menu-area hidden-sm hidden-xs" id="header-sticky">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="menu-area">
                                <nav>
                                    <ul>
                                        <li class="active">
                                            <a href="~/Home/Index">Trang chủ</a>
                                        </li>
                                        @{Html.RenderAction("_PartialMenuSachTrongNuoc", "Home");}
                                        @{Html.RenderAction("_PartialMenuSachNuocNgoai", "Home");}
                                        <li>
                                            <a href="#">SALES OFF</a>
                                        </li>
                                        <li>
                                            <a href="#">TIN TỨC</a>
                                        </li>
                                        <li>
                                            <a href="#">Hỗ trợ</a>
                                        </li>
                                        <li>
                                            <a href="#">Khác<i class="fa fa-angle-down"></i></a>
                                            <div class="sub-menu sub-menu-2">
                                                <ul>
                                                    <li><a href="#">Thông tin shop</a></li>
                                                    <li><a href="#">Nhà cung cấp</a></li>
                                                    <li><a href="#">Tác giả</a></li>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- main-menu-area-end -->
            <!-- mobile-menu-area-start -->
            <div class="mobile-menu-area hidden-md hidden-lg">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="mobile-menu">
                                <nav id="mobile-menu-active">
                                    <ul id="nav">
                                        <li>
                                            <a href="~/Home/Index">Trang chủ</a>
                                        </li>
                                        @{Html.RenderAction("_PartialMenuSachTrongNuoc", "Home");}
                                        @{Html.RenderAction("_PartialMenuSachNuocNgoai", "Home");}
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- mobile-menu-area-end -->
        </header>
        <div>
            @RenderBody()
        </div>
        <div class="banner-area banner-res-large pb-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                        <div class="single-banner">
                            <div class="banner-img">
                                <a href="#"><img src="~/img/banner/1.png" alt="banner" /></a>
                            </div>
