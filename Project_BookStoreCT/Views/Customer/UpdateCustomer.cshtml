
@{
    ViewBag.Title = "Cập nhập thông tin";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<style>
    .col-form-label {
        padding-left: 50px !important;
    }

    .form-control {
        width: 95%;
    }

    .col-sm-10 {
        width: 90%;
        margin: 0 auto;
    }

    .col-sm-12 {
        margin-left: 20px !important;
        width: 90%;
        margin: 0 auto;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            @foreach (var cus in ViewBag.GetInfoCus)
            {
                <div class="card-block">
                    <h4 style="text-align:center;padding-top:10px;font-weight:bold" class="sub-title">SỬA NGƯỜI DÙNG</h4>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Họ và Tên (*)</label>
                        <div class="col-sm-10">
                            <input id="txtUserName" value="@cus.customerName" required type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Giới tính</label>
                        <div class="col-sm-10">
                            <select style="height:35px;" id="dropSex" name="select" class="form-control">
                                <option value="1">Nam</option>
                                <option value="0">Nữ</option>>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Số điện thoại (*)</label>
                        <div class="col-sm-10">
                            <input id="txtSDT" value="@cus.customerPhone" type="number" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Địa chỉ (*)</label>
                        <div class="col-sm-10">
                            <input id="txtDiaChi" value="@cus.customerAddress" type="text" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email:</label>
                        <div class="col-sm-10">
                            <input id="txtEmail" value="@cus.customerEmail" type="email" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <button onclick="Update(@cus.Customer_ID)" style="margin-left:5px;color:white;background-color:#ff6a00" class="form-control btn btn-primary">Cập nhật</button>
                        </div>
                        <div class="col-sm-6">
                            <a href="~/Admin/UsersIndex" style="margin-left:5px;color:white;background-color:#ff6a00" class="form-control btn btn-primary">Trở về</a>
                        </div>
                    </div>

                </div>
            }
        </div>

    </div>
</div>

<script>
    function Update(cid) {
        var check = true;
        var username = $("#txtUserName").val();
        var phone = $("#txtSDT").val();
        var address = $("#txtDiaChi").val();
        var sex = $("#dropSex option:selected").val()
        var email = $("#txtEmail").val();

      
        // Tạo formData truyền vào ajax
        var formData = new FormData();
        
        //append vào form data
        
        formData.append('username', username)
        formData.append('phone', phone)
        formData.append('address', address)
        formData.append('sex', sex)
        formData.append('email', email)
        formData.append('userid', cid)


        if (username == "" || phone == "" || address == "" || email == "") {
            alert("Không được bỏ trống");
            return check = false;
        }
        else {
            if (phone.length < 10 || phone.length > 10) {
                alert("Số điện thoại phải 10 chữ số");
                return check = false;
            }
        }
        if (check == true) {
            $.ajax({
                url: '/Customer/UpdateCustomer',
                type: 'POST',
                contentType: false,
                processData: false,
                data: formData
            }).done(function (data) {
                if (data.mess__== 1) {
                    alert("Sửa thành công")
                    location.href = '/Customer/Index'
                }
                else {
                    alert("Sửa thất bại")
                }
            })
        }
    }
</script>

